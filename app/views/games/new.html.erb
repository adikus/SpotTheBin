<div class="page-header text-center">
  <h1>Create a Game</h1>
</div>
<div class="row">
    <div class="col-sm-6">
      <%= image_tag("map.png", size:'500x500', id:'pointer') %>
    </div>
    <div class="col-sm-6">

      
    <% @game.errors.any? do %>
      <div class="alert alert-danger">
        <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      


      <p>X:<span id="x"></span></p>
      <p>Y:<span id="y"></span></p>

      <%= form_for @game, hmtl: {class: 'form-horizontal'} do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :password, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :start_time, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :start_time, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
              <%= f.submit 'Create game', class: 'btn btn-primary btn-lg btn-block' %>
            </div>
          </div>
      <% end %>
    </div>
</div>
