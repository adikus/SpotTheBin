<div class="page-header text-center">
  <h1>Create a Game</h1>
</div>
<div class="row">
    <div class="col-sm-6">
      <canvas id="pointer" class="pointer" style="border:1px solid #d3d3d3;">
      Your browser does not support the HTML5 canvas tag.</canvas>

    </div>
    <div class="col-sm-6">

      
    <% @game.errors.any? do %>
      <div class="alert alert-danger">
        <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <%= form_for @game, hmtl: {class: 'form-horizontal'} do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :password, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :start_time, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :start_time, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :center_x, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :center_x, class: 'form-control', readonly: true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :center_y, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :center_y, class: 'form-control', readonly: true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :radius, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.text_field :radius, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
              <%= f.submit 'Create game', class: 'btn btn-primary btn-lg btn-block' %>
            </div>
          </div>
          <h3>Categories:</h3>
        <% Place.select("DISTINCT(CATEGORY)").each do |p| %>
          <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
              <%= check_box_tag p.category %> - <%= p.category %> <BR>
            </div>
          </div>
        <% end %>
        <!--
          <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
            </div>
          </div>
        -->
      <% end %>
    </div>
</div>
<%= image_tag("map.png", id:'pointerimg') %>